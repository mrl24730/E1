<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    	android:background="@drawable/news_table_bg">
    
    <ImageView
        android:id="@+id/News_Table_ImageBg"
      	android:layout_width="fill_parent"
      	android:layout_height="fill_parent"
      	android:background="@drawable/news_table_bg"
     	android:contentDescription="@string/imageDesc"
        android:layout_centerVertical="true" />
    
    <ImageView
        android:id="@+id/News_Table_Image"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:background="@drawable/news_table_image"
     	android:contentDescription="@string/imageDesc"     
       	android:layout_marginLeft="10dp"       	
        android:layout_centerVertical="true" />

    <LinearLayout
	    android:id="@+id/News_Table_Cell"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
   	 	android:orientation="vertical"
	    android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/News_Table_Image"
	 	android:layout_toLeftOf="@+id/News_Table_Cross"
		android:layout_marginLeft="10dp"
	 	android:layout_marginRight="10dp"
       	android:clickable="false"  >
   	 	
	    <TextView
	        android:id="@+id/News_Table_Title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:singleLine="false"
	        android:ellipsize="end"
	        android:gravity="left"
	        android:maxLines="3"
	        android:text="Model: GS608-2556 Swiss made quartz movement Date indication Stainless steel case and bracelet Sapphire crystal 5 ATM Water"
	        android:textColor="@android:color/white"
	        android:textSize="14sp"
	        android:textStyle="bold"/>
	    
	    <TextView
	        android:id="@+id/News_Table_Date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ellipsize="end"
	        android:gravity="left"
	        android:maxLines="1"
	        android:text="2012-12-28"
	        android:textColor="@color/fakeGoldColor"
	        android:textSize="13sp"
	        android:textStyle="bold" />
    
    </LinearLayout>
    
    <ImageView
        android:id="@+id/News_Table_Cross"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/general_rightarrow"
		android:contentDescription="@string/imageDesc"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
       	android:layout_marginRight="10dp"/>
    
</RelativeLayout>