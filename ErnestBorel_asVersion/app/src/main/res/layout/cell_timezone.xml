<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/collection_tablebg" >
    
	<TextView 
            android:id="@+id/Time_Table_Name" 
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="23sp"
            android:text="Abu Dhabi"
        	android:layout_centerVertical="true"
			android:layout_marginLeft="30dp"/>
        
	<TextView 
            android:id="@+id/Time_Table_UTC"  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fakeGoldColor"
            android:textSize="14sp"
            android:text="(UTC +04:00)"
        	android:layout_centerVertical="true"
			android:layout_toRightOf="@+id/Time_Table_Name"
			android:layout_marginLeft="5dp"/>
         
</RelativeLayout>