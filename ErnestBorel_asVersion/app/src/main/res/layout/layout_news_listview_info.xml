<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	    <LinearLayout
			android:id="@+id/News_BtnLayout"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_horizontal">
		    	
			<Button
				android:id="@+id/News_NewBtn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"				
				android:background="@drawable/news_newerbtn"
				android:visibility="invisible" />
			
			<Button
				android:id="@+id/News_OldBtn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/news_olderbtn"
				android:visibility="invisible" />
			
		</LinearLayout>
	</RelativeLayout>
	
    <ScrollView
		android:id="@+id/News_ScrollView"
		android:layout_height="fill_parent"
		android:layout_width="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp">
        
		<LinearLayout
			android:id="@+id/News_ScrollView_LinearLayout"
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal">
		
			<ImageView
				android:id="@+id/News_Image"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:background="@drawable/news_info_image" 
				android:contentDescription="@string/imageDesc"
	   			android:scaleType="fitCenter" />
			
			<TextView
	            android:id="@+id/News_Detail_Title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:ellipsize="none"
	            android:gravity="left"
	            android:maxLines="999"
	            android:text=""
	            android:textColor="@android:color/white"
	            android:textSize="16sp"
	            android:textStyle="bold"
	            android:layout_above="@+id/Collection_Detail_WatchImage"
	       		android:layout_centerHorizontal="true"
	    		android:layout_marginTop="10dp"
	       		android:layout_marginBottom="6dp" />
			
			<TextView
	            android:id="@+id/News_Detail_Date"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:ellipsize="none"
	            android:gravity="left"
	            android:textColor="@color/fakeGoldColor"
	            android:layout_gravity="left"
	            android:maxLines="999"
	            android:text=""
	            android:textSize="14sp"
	            android:textStyle="normal"
	            android:layout_above="@+id/Collection_Detail_WatchImage"
	       		android:layout_centerHorizontal="true"
	       		android:layout_marginBottom="6dp" />
			
			<TextView
	            android:id="@+id/News_Detail_Desc"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:ellipsize="none"
	            android:gravity="left"
	            android:maxLines="999"
	            android:text=""
	            android:textColor="@android:color/white"
	            android:textSize="14sp"
	            android:textStyle="normal"
	            android:layout_above="@+id/Collection_Detail_WatchImage"
	       		android:layout_centerHorizontal="true"
	       		android:layout_marginBottom="6dp" />
			
		</LinearLayout>
		
	</ScrollView>

</LinearLayout>