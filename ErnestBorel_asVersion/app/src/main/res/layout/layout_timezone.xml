<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@drawable/collection03">
    
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/general_menutopbar"
        android:contentDescription="imgView"        
    />
    
    <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/time_searchbarbg">
            	              
            <EditText 
                android:id="@+id/Time_SearchBox"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:background="@drawable/time_searchbartxtbg"
            	android:inputType="textCapCharacters"
            	android:paddingLeft="12dp"
            	android:hint="@string/times_searchHints"
            />
         	        	      		  
      		<Button
	            android:id="@+id/Time_SearchBtn" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/time_searchbarbtn"
            />   
     </LinearLayout>
	    	    
    <ListView
        android:id="@+id/TimeZone_ListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:cacheColorHint="@null"
       	android:divider="@android:color/transparent"
       	android:dividerHeight="0dp"
       	android:listSelector="@android:color/background_light">
    </ListView>
    
</LinearLayout>