<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/general_bg"
    android:orientation="vertical"
    >
    
    <ImageView android:id="@+id/Wallpaper_TopBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/general_menutopbar"              
        />
    
    <Button 
        android:id="@+id/Wallpaper_LeftBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/collection_leftarrow"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        />
    
  	<Button 
        android:id="@+id/Wallpaper_RightBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/collection_rightarrow"
		android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        />
    <Button
        android:id="@+id/Wallpaper_DownloadBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"        
        android:layout_centerHorizontal="true"
        android:background="@drawable/wallpaper_downloadbtn"
        android:visibility="visible" />
     
    <LinearLayout
		android:id="@+id/Wallpaper_PointerLayout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"		
		android:layout_centerHorizontal="true"
		android:layout_above="@id/Wallpaper_DownloadBtn"
		android:layout_marginBottom="10dp"
		  >
    </LinearLayout>
    
</RelativeLayout>